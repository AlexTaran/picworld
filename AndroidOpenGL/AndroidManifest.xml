<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alex.taran.opengl"
    android:versionCode="1"
    android:versionName="1.0" 
    android:largeHeap="true" >
    <uses-feature android:glEsVersion="0x00020000"></uses-feature>
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme">
        <activity
            android:name=".AndroidOpenGLActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>

	<activity android:name="max.popov.LevelListActivity"></activity>
        
        <activity android:name="max.popov.MainMenuActivity">
            <intent-filter>
		<action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
	</intent-filter>
        </activity>
        
        
        
        <activity
            android:name="ilya.irhin.editor.StartEditorActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>

	<activity
            android:name="ilya.irhin.editor.FieldEditorActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
        
        <activity
            android:name="ilya.irhin.editor.ChooseExistingLevelActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
	<activity android:name="max.popov.SettingsActivity"></activity>
	<activity
            android:name="ilya.irhin.editor.SizesEditorActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
           
        </activity>
        
        <activity
            android:name="ilya.irhin.editor.FunctionsEditorActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
           
        </activity>
    </application>

</manifest>