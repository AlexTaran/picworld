###VERTEX

uniform mat4 mvp;

attribute vec2 pos;
attribute vec2 texcoord;

varying vec2 tc;

void main(){
    gl_Position = mvp*vec4(pos.x,pos.y,0.0,1.0);
    tc = texcoord;
}

###FRAGMENT

precision mediump float;

uniform sampler2D tex;

varying vec2 tc;

uniform vec4 color;

void main(){
    gl_FragColor = color*texture2D(tex,tc);
}
