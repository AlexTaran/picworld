<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <SeekBar
        android:id="@+id/weightBar"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/heightBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="109sp" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_above="@+id/weightBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/input_width" />

    <TextView
        android:id="@+id/heightText"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignLeft="@+id/weightText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/input_height" />

    <SeekBar
        android:id="@+id/heightBar"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/heightText"
        android:layout_below="@+id/heightText" />

    <TextView
        android:id="@+id/weightValueText"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignLeft="@+id/heightValueText"
        android:layout_alignTop="@+id/weightBar"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="@string/value" />

    <TextView
        android:id="@+id/heightValueText"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignLeft="@+id/heightBar"
        android:layout_below="@+id/heightBar"
        android:gravity="center"
        android:text="@string/value" />

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignTop="@+id/weightValueText"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/weightValueText"
        android:gravity="center" />

    <TextView
        android:id="@+id/heightValue"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignTop="@+id/heightValueText"
        android:layout_toRightOf="@+id/heightValueText"
        android:gravity="center" />
    
     <Button
        android:id="@+id/button1"
        android:onClick="onClick"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/ok" />

</RelativeLayout>